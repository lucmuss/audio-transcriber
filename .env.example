# Audio Transcriber Environment Variables

# API Configuration
AUDIO_TRANSCRIBE_API_KEY=your-api-key-here
AUDIO_TRANSCRIBE_BASE_URL=https://api.openai.com/v1
AUDIO_TRANSCRIBE_MODEL=whisper-1
AUDIO_TRANSCRIBE_RESPONSE_FORMAT=text

# Output Configuration
AUDIO_TRANSCRIBE_OUTPUT_DIR=./transcriptions
AUDIO_TRANSCRIBE_SEGMENTS_DIR=./segments
AUDIO_TRANSCRIBE_SUMMARY_DIR=./summaries
AUDIO_TRANSCRIBE_EXPORT_DIR=./exports

# Processing Configuration
AUDIO_TRANSCRIBE_SEGMENT_LENGTH=600
AUDIO_TRANSCRIBE_OVERLAP=10
AUDIO_TRANSCRIBE_CONCURRENCY=4
AUDIO_TRANSCRIBE_TEMPERATURE=0.0
AUDIO_TRANSCRIBE_PROMPT=

# Summarization Configuration
AUDIO_TRANSCRIBE_SUMMARY_MODEL=gpt-5-mini
AUDIO_TRANSCRIBE_SUMMARY_PROMPT="Create a detailed summary of the transcript. Use clear sections: Summary, Key Points, Decisions, and Open Questions. Then add a TODO list that reads like a meeting protocol: each item must include Task, Owner, Due Date, and Status (use Unassigned/No due date mentioned if missing)."

# Docker Configuration
RUN_TESTS=false
